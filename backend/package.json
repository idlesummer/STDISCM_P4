{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "description": "Python gRPC training server",
  "scripts": {
    "start": "uv run python -m src.main",
    "dev": "uv run python -m src.main",
    "subscribe": "uv run python -m src.subscriber",
    "install": "uv sync",
    "clean": "rm -rf .venv __pycache__ src/**/__pycache__ src/**/*.pyc",
    "proto:clean": "rm -f src/proto/metrics_pb2.py src/proto/metrics_pb2.pyi src/proto/metrics_pb2_grpc.py"
  }
}
